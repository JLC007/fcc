            </ul>
        </div>

        <div class="col-md-8">
            <div class="form-group">
                <select padding placeholder="Select a Group" type="search" class="form-control select-table-filter" data-table="order-table">
            <option>--Select a group--</option>
            {{#each groups}}
                <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
            </div>
    
   
            <div class="table-responsive all-coders">
                <table class="table order-table" id="statstable">
                    <thead>
                        <tr>
                            <th class="hidden">Group</th>
                            <th>Github Username</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Html & CSS</th>
                            <th>JavaScript</th>
                            <th>Last Active</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each coders}}
                        <tr>
                            <td class="hidden">{{this.group}}</td>
                            <td><h5><span class="badge badge-default">{{this.username}}<span></h5></td>
                    <td>{{this.firstname}}</td>
                    <td>{{this.lastname}}</td>
                    <td>{{this.web}}</td>
                    <td>{{this.javascript}}</td>
                    <td>{{this.lastdate}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
